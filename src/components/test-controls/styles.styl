.test-controls {
  display flex
  align-items center
  justify-content center
  flex 1
  height 100vh

  background-color #E7EBF0
  border-left 2px solid #E9EBED

  .test-controls__buttons {
    display flex
    flex-direction column
    align-items center
    justify-content center
    max-width 420px

    padding 42px
    border-radius 4px
    background-color #fff
    box-shadow 0 1px 1px rgba(0, 0, 0, .2)
  }

  .test-controls__title {
    margin-bottom 24px
  }

  .test-controls__subtitle {
    margin-bottom 24px
  }

  .test-control {
    display flex
    flex-direction row
    justify-content: space-between;
    align-items: center;
    margin-bottom 24px

    &:hover {
      .test-control__description {
        color #222
      }
    }

    .test-control__description {
      margin-right 24px
      color #808080
    }

    .iguessitsdoneprettywell {
      margin-top 21px
      font-size 11px
    }
  }
}
