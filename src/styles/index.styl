* {
  font-family 'Roboto', sans-serif
  margin 0
  padding 0
  color #222
}

.button {
  display inline-block
  padding 8px 16px
  border-radius 3px
  background-color #5e81a8
  color #fff
  cursor pointer
  white-space: nowrap;

  &:hover {
    background-color #6888ad
  }

  &:active {
    background-color #5779a1
  }
}
